<Window x:Class="negyszogekWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:negyszogekWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="dtg_Data" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="29,48,340,48" SelectionChanged="dtg_Data_SelectionChanged"/>
        <TextBox x:Name="tbx_Aoldal" HorizontalAlignment="Left" Margin="578,79,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="tbx_Boldal"  HorizontalAlignment="Left" Margin="578,139,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="tbx_Coldal" HorizontalAlignment="Left" Margin="578,199,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="tbx_Doldal" HorizontalAlignment="Left" Margin="578,259,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button Content="Hozzáad" HorizontalAlignment="Left" Margin="651,315,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        <Button Content="Törlés" HorizontalAlignment="Left" Margin="659,394,0,0" VerticalAlignment="Top" Click="Button_Click_1"/>
        <Button Content="Módosítás" HorizontalAlignment="Left" Margin="654,353,0,0" VerticalAlignment="Top" Click="Button_Click_2"/>
        <ComboBox x:Name="cmx_Oldal" HorizontalAlignment="Left" Margin="490,341,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="cmx_Oldal_SelectionChanged"/>
        <Button x:Name="btn_rendezes" Content="Rendezés" HorizontalAlignment="Left" Margin="497,298,0,0" VerticalAlignment="Top" Click="btn_rendezes_Click"/>

    </Grid>
</Window>
